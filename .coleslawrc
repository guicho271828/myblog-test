           ;; default deploy method is rsync
           (rsync "-avz" "--delete" "--exclude" ".git/" "--exclude" ".gitignore" "--copy-links")
          )
 :sitenav ((:url "http://masataro.github.com/" :name "Home")
           (:url "http://twitter.com/masataro" :name "Twitter")
